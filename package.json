{
  "name": "simple-web-app-cicd",
  "version": "1.0.0",
  "description": "A simple web application demonstrating CI/CD pipeline",
  "main": "index.html",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "npm run test && npm run validate",
    "validate": "node validate.js",
    "serve": "python -m http.server 8000 || python3 -m http.server 8000"
  },
  "keywords": ["cicd", "web", "demo"],
  "author": "Junior Developer",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.0.0",
    "jsdom": "^22.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/test-setup.js"]
  }
}